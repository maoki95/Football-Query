<%= form_with model: question, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="card w-100">
  <div class="card-body">
  <div class="form-group has-success">
    <%= f.label :title,"タイトル(必須)" %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group has-success">
    <%= f.label :body,"詳細(必須）" %>
    <%= f.text_area :body, class: 'form-control', rows: 3 %>
  </div>
  
    <%= f.label :picturies,'画像 (複数枚可)'%>
    <%= f.file_field :pictures, class: 'form-control mb-3', multiple: true %>

    <%= f.label :video,"動画"%>
    <%= f.file_field :video, class: 'form-control',accept:'video/*'%>

  <div class="form-group has-success">
    <%= f.label :youtube,"Youtube"%>
    <%= f.text_field :youtube, class: 'form-control'%>
  </div>
 
  <%= f.label :categories,"カテゴリー"%>
    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |category| %> 
       <%= category.label do %>
        <%= category.check_box%>
        <%= category.text %>
      <% end %>
    <% end %>
  <div>
  <%= f.submit '質問する', class: 'btn btn-success' %>
  </div>
<% end %>
</div>
</div>