<%= form_with model: question, local: true do |f| %>
  <div class="form-group has-success">
  <%= render 'shared/error_messages', object: f.object %>
    <%= f.label :タイトル %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group has-success">
    <%= f.label :詳細 %>
    <%= f.text_area :body, class: 'form-control', rows: 3 %>
  </div>

  <div class="form-group has-success">
    <%= f.label :Youtube%>
    <%= f.text_field :youtube, class: 'form-control'%>
  </div>

  <div class="row">
  <div class="form-group form-file-upload form-file-multiple">
    <%= f.label :video,"動画をアップロード",class:"badge badge-pill badge-default"%>
    <%= f.file_field :video, class: 'form-control',accept:'video/*'%>
  </div>
  
    <div class="form-group ">
    <%= f.label :pictures,"画像をアップロード", class:"badge badge-pill badge-default"%>
    <%= f.file_field :pictures, class: 'form-control mb-3', multiple: true %>
   </div>
   </div>

   
  <%= f.label :カテゴリー%>
    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |category| %> 
       <%= category.label do %>
        <%= category.check_box%>
        <%= category.text %>
      <% end %>
    <% end %>

  <div class="text-right">
  <%= f.submit '質問する', class: 'btn btn-success' %>
  </div>

<% end %>