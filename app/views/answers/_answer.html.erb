<tr id="answer-<%= answer.id %>">
   <td style="width: 60px">
     <%= image_tag 'aaa.jpg', class: 'rounded-circle', size: '40x40' %>
   </td>
   <td>
     <h3 class="small"><%= answer.user.name %></h3>
     <div id="js-answer-<%= answer.id %>">
       <%= simple_format(answer.body) %>
     </div>
     <div id="js-textarea-answer-box-<%= answer.id %>" style="display: none;">
       <textarea id="js-textarea-answer-<%= answer.id %>" class="form-control mb-1"><%= answer.body %></textarea>
       <button class="btn btn-light js-button-edit-answer-cancel" data-answer-id="<%= answer.id %>">キャンセル</button>
       <button class="btn btn-success js-button-answer-update" data-answer-id="<%= answer.id %>">更新</button>
     </div>
   </td>

   <% if current_user.own?(answer) %>
     <td class="action">
       <ul class="list-inline justify-content-center" style="float: right;">
         <li class="list-inline-item">
           <a href="#" class='js-edit-answer-button' data-answer-id="<%= answer.id %>">
             <%= icon 'fa', 'pen' %>
           </a>
         </li>
         <li class="list-inline-item">
           <a href="#" class='js-delete-answer-button' data-answer-id="<%= answer.id %>">
             <%= icon 'fas', 'trash' %>
           </a>
         </li>
       </ul>
     </td>
   <% end %>
 </tr>