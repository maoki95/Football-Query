<% unless logged_in? %>
<div class="container-fluid">
   <div class="row">
     <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 col-sm-12">
     <div class="tags">
       <h1>ログイン</h1>
       <div class="card">
     <div class="card-body">
       <%= form_with url: login_path, local: true do |f| %>
         <div class="form-group has-success">
           <%= f.label :email,"メールアドレス" %>
           <%= f.text_field :email, class: 'form-control' %>
         </div>
         <div class="form-group has-success">
           <%= f.label :password,"パスワード" %>
           <%= f.password_field :password, class: 'form-control' %>
         </div>
         <span>
         <%= link_to "利用規約", terms_of_use_path,class:"use_border"%>と<%= link_to "プライバシーポリシー",  privacy_policy_path,class:"use_border"%>に同意した上で、ご登録ください。
         <div>
          ❇︎ <%= link_to "FootballQueryの使い方", use_path,class:"use_border"%>
          </div>
         </span>
         <div class="actions">
           <%= f.submit 'ログイン', class: 'btn btn-success' %>
         </div>
       <% end %>
       </div>
         </div>
        
       <div class='text-center'>
       <div class="arrow">
         <%= link_to '登録ページへ', new_user_path %>
         </div>
       </div>
     </div>
   </div>
 </div>
<% else %>
<h2>すでにログイン済みです<h2>
 <% end %>
