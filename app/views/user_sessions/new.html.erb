
<div class="container">
   <div class="row">
     <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2"><div class="tags">
       <h1>ログイン</h1>
       <div class="card w-100">
     <div class="card-body">
       <%= form_with url: login_path, local: true do |f| %>
         <div class="form-group has-success">
           <%= f.label :メールアドレス %>
           <%= f.text_field :email, class: 'form-control' %>
         </div>
         <div class="form-group has-success">
           <%= f.label :パスワード %>
           <%= f.password_field :password, class: 'form-control' %>
         </div>
         <div class="actions">
           <%= f.submit 'ログイン', class: 'btn btn-success' %>
         </div>
       <% end %>
       </div>
         </div>
       
       <div class='text-center'>
       <div class="arrow">
         <%= link_to '登録ページへ', new_user_path %>
         </div>
       </div>
     </div>
   </div>
 </div>
