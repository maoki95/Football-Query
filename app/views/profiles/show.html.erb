<div class="container pt-3">
   <div class="row">
     <div class="col-md-10 offset-md-1">
       <h1 class="float-left mb-5">プロフィール</h1>
       <table class="table">
       <tr>
           <th scope="row">名前</th>
           <td><%= current_user.name %></td>
         </tr>
         <% if current_user %>
         <tr>
           <th scope="row">Eメール</th>
           <td><%= current_user.email %></td>
         </tr>
         <%end%>
         <tr>
           <th scope="row">自己紹介</th>
           <td><%= current_user.introduce %></td>
         </tr>
         <tr>
            <th scope="row">ベストアンサー数</th>
            <td><%= @best_answer.count %></td>
          </tr>
          <tr>
           <th scope="row">アバター</th>
           <td><%= image_tag current_user.avatar.url, class: 'rounded-circle', size: '70x70' %></td>
         </tr>
       </table>
       <div class="text-right">
       <%= link_to '編集', edit_profile_path, class: 'btn btn-success'%>
       </div>
      </div>
      <h1>自分の質問</h1>
   </div>
</div>
<% if @questions.present? %>
             <%= render @questions %>
<% end %>