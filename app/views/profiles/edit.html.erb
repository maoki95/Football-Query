 <div class="container">
   <div class="row">
     <div class="col-md-10 offset-md-1">
       <h1>ユーザー編集</h1>
       <%= form_with model: @user, url: profile_path, local: true do |f| %>
         <%= render 'shared/error_messages', object: f.object %>
         <div class="form-group has-success">
         <%= f.label :email %>
         <%= f.email_field :email, class: 'form-control mb-3' %>
         </div>

         <div class="form-group has-success">
         <%= f.label :name %>
         <%= f.text_field :name, class: 'form-control mb-3' %>
         </div>

         <div class="form-group has-success">
         <%= f.label :introduce %>
         <%= f.text_field :introduce, class: 'form-control mb-3' %>
         </div>

         <%= f.label :avatar %>
         <%= f.file_field :avatar, onchange: 'previewFileWithId(preview)', class: 'form-control mb-3', accept: 'image/*' %>
         <%= f.hidden_field :avatar_cache %>
 
         <div class='mt-3 mb-3'>
           <%= image_tag @user.avatar.url,
                         class: 'rounded-circle',
                         id: 'preview',
                         size: '100x100' %>
         </div>
         <div class='text-right'>
         <%= f.submit class: 'btn btn-success'%>
         </div>
       <% end %>
     </div>
   </div>
 </div>